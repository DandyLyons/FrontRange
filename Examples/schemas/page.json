{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Page Schema",
  "description": "JSONSchema for validating page front matter",
  "type": "object",
  "required": ["title", "layout"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Page title"
    },
    "layout": {
      "type": "string",
      "enum": ["default", "full-width", "sidebar", "landing"],
      "description": "Page layout template"
    },
    "permalink": {
      "type": "string",
      "pattern": "^/[a-z0-9-/]*$",
      "description": "Custom URL path"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Page meta description for SEO"
    },
    "navigation": {
      "type": "object",
      "properties": {
        "show": {
          "type": "boolean",
          "default": true
        },
        "order": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Navigation menu settings"
    }
  },
  "additionalProperties": true
}
