{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blog Post Schema",
  "description": "JSONSchema for validating blog post front matter",
  "type": "object",
  "required": ["title", "date", "draft"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Post title"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Publication date (YYYY-MM-DD)"
    },
    "draft": {
      "type": "boolean",
      "description": "Whether this is a draft post"
    },
    "author": {
      "type": "string",
      "description": "Post author name"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Post tags for categorization"
    },
    "summary": {
      "type": "string",
      "maxLength": 300,
      "description": "Brief summary or excerpt"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Whether this post should be featured"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["tech", "tutorial", "news", "announcement", "opinion"]
      },
      "description": "Post categories"
    }
  },
  "additionalProperties": true
}
